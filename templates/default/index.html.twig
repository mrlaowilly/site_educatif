{% extends 'base.html.twig' %}

{% block title %}Welcome home ! dear{% endblock %}
{% block stylesheets %}
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/reset.css') }}">
    {{ parent() }}
    <link rel="stylesheet" href="css/style1.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container bg-white" style="padding-bottom: 30px;">
    <!--  on appel blog show, ID c'est pour passer un parametre        -->
    <div class="row">
        <img src="{{ asset('image/bandeau.jpg') }}" style="height: 100%; width: 100%;">
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2 style="color: black; text-align: center; margin-bottom: 1%; padding-top: 2%">
            <strong>LesTutos.com !</strong> DÃ©couvrir et partager nos passions !</h2>
        </div>
        <div class="container">
            <div class="row">
            <div class="col-lg-9">
                <div class="row">
                    {% for blog in blogs %}
                    {#<div class="col-sm-12 col-md-6 col-lg-4">#}
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="vignette">
                            <a href="{{ path('blog_show', {'id': blog.id}) }}">
                                <span style="text-transform: uppercase; color: black; background-color: white; position: relative;
                                top: 22px; padding-left: 10%; padding-right: 10%; font-size: 2vh;"><strong>{{ blog.title}}</strong></span>
                                <br />
                                <img style="width: 100%; height: 100%;" src="{{ asset(blog.imageLink) }}" />
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-lg-3" style="background-color: lightgrey; padding: 10px; margin-top: 2.2%;">
                <h4 style="text-transform: uppercase; margin-bottom: 10%; margin-top: 5%; padding-left: 5%;">Liste des blogs</h4>
                {% for blog in blogs %}
                <a href="{{ path('blog_show', {'id': blog.id}) }}">
                <p style="background-color: #e8e8e8; padding-left: 5%; margin: 5%; text-transform: uppercase;"><strong>{{ blog.title}}</strong></p>
                </a>
                {% endfor %}

            </div>
        </div>
    </div>
</div>
{% endblock %}
