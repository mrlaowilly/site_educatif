{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

<div class="container" style="background-color: rgba(200, 200, 200, 0.8)">
    <h1>Page</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ page.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ page.title }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td><img src="{{ asset('uploads/photos/' ~ page.photo) }}"></td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ page.content }}</td>
        </tr>
        </tbody>
    </table>

    <h3><a href="{{ path('blog_show', {'id': page.blog.id}) }}">back to list</a></h3>           <!-- On retourne au blog de la page -->

</div>
{% endblock %}