{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container" style="background-color: rgba(200, 200, 200, 0.8)">
    <h1>{{ 'User index' | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Id' | trans }}</th>
                <th>{{ 'mail' | trans }}</th>
                <th>{{ 'Roles' | trans }}</th>
                <th>{{ 'actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">{{ 'show' | trans }}</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">{{ 'edit' | trans }} </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">{{ 'Create new' | trans }}</a>
</div>
{% endblock %}
